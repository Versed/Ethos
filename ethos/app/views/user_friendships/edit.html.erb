Viewing friendship

<% if @user_friendship.requested? %>
  <h3> Do you really want to be friends with <%= @friend.first_name %>?</h3>
<% end %>

<% if @user_friendship.requested? %>
  <%= simple_form_form @user_friendship, url: accept_user_friendship_path(@user_friendship), method:
    :put do |form| %>

    <%= form.submit "Accept friendship", class: "button" %>
  <% end %>
<% end %>
