<% if can_unlike?(@ideaboard) %>
  <%= simple_form_for @like, method: :destroy do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :ideaboard_id, :value => @ideaboard.id %>
    <%= f.submit "Unlike", class: "button" %>
  <% end %>
<% end %>
