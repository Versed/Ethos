<%= @likes.count %> likes

<% @likes.each do |like| %>
  <%= like.user_id %>
<% end %>

<%= simple_form_for @like, method: :create do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :ideaboard_id, :value => @ideaboard.id %>
  <% if can_like?(@ideaboard) %>
    <%= f.submit "Like", class: "button" %>
  <% end %>
<% end %>
<% if can_unlike?(@ideaboard) %>
  <%= link_to 'Unlike', like_path('ideaboards', @ideaboard), method: :delete, class: "button" %>
<% end %>
