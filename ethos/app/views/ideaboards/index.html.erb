<div class="row">
  <% if signed_in? %>
    <%= render 'form' %>
  <% end %>

  <% @ideaboards.each do |ideaboard| %>
    <% if can_display_ideaboard?(ideaboard) %>
      <div class="large-4 columns">
        <div class="featured-idea">
          <div class="row author">
            <div class="larege-4 small-4 columns">
              <%= link_to profile_path(ideaboard.user) do %>
                <%= ideaboard.user.full_name %>
                <%= avatar_profile_link ideaboard.user, {}, class: '' %>
              <% end %>
            </div>
          </div>
          <%= link_to "#{ideaboard.title}", ideaboard_path(ideaboard) %>
          <%= ideaboard_document_link @ideaboard %>
          <p class="description"><%= ideaboard.description %>

          <hr>
          <div class="like">
            <a>Like</a>
            <!-- <a>Unlike</a> -->
          </div>
          <div class="row detail">
            <div class="large-4 columns">0 Likes</div>
          </div>
          <div class="row detail">
            <div class="large-12 columns">
              <div class="skills-needed">Skills needed:
                <a> Programming </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
