<div class="row">
  <% if signed_in? && @ideaboard.user == current_user %>
    <% if @ideaboard.pending_collaborators.count > 0 %>
      <div class="large-6 columns">
        <h4 class="subheader">Pending collaboration requests</h4>
        <ul class="link-list friendsList clearfix centered">
          <% @ideaboard.pending_collaborators.each do |collaboration| %>
            <li class="section large-3 columns portfolio-preview">
              <%= avatar_profile_link collaboration.user, {}, class: '' %>
              <div class="centered">
                <hr>

                <%= link_to "Approve", edit_collaboration_path('ideaboards', @ideaboard, collaboration) %>
                | <%= link_to "Decline", edit_collaboration_path('ideaboards', @ideaboard, collaboration) %>
                | <%= link_to "Block", edit_collaboration_path('ideaboards', @ideaboard, collaboration) %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="large-6 columns">
      <% if @ideaboard.blocked_collaborators.count > 0 %>
        <h4 class="subheader">Blocked collaborators</h4>
          <ul class="link-list friendsList clearfix centered">
          <% @ideaboard.blocked_collaborators.each do |collaboration| %>
            <li class="section large-6 columns portfolio-preview">
              <%= avatar_profile_link collaboration.user, {}, class: '' %>
              <div class="centered">
                <hr>
                Unblock
                Remove
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <hr>
  <% end %>
</div>

<div class="row">
  <h4 class="subheader">Collaborators for <%= @ideaboard.title %></h4>
  <% if can_collaborate?(@ideaboard) %>
    <%= link_to "Apply to be a Collaborator", new_collaboration_path('ideaboards', @ideaboard), class: 'button' %>
  <% end %>

  <ul class="link-list friendsList clearfix centered">
    <li class="section large-3 columns portfolio-preview">
      <%= avatar_profile_link @ideaboard.user, {}, class: '' %>
    </li>
    <% @ideaboard.collaborators.each do |collaboration| %>
      <li class="section large-3 columns portfolio-preview">
          <%= avatar_profile_link collaboration.user, {}, class: '' %>
      </li>
    <% end %>
  </ul>
</div>
