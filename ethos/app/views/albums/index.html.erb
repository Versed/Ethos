<%= page_header do %>
  <h1>Listing albums</h1>
<% end %>

    <% @albums.each do |album| %>
      <%= album.ideaboard %>
      <%= album.title %>
      <%= link_to 'Show', album %>
      <% if can_edit_album(album) %>
        | <%= link_to 'Edit', edit_album_path(album) %>
        | <%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>

<br>

<%= link_to 'New Album', new_album_path %>
